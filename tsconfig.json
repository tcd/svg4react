{
    "compilerOptions": {
        "strict": false,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "target": "es5",
        "jsx": "react-jsx",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "noFallthroughCasesInSwitch": true,
        "allowJs": false,
        "sourceMap": true,
        "downlevelIteration": true,
        "declaration": true,
        "declarationMap": true,

        //
        //         "typeRoots": [
        //             "./node_modules/@types",
        //             "./src/@types"
        //         ],
        // "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "@sv4/core/*": ["./packages/core/src/*"],
            "@sv4/dev/*":  ["./packages/dev/src/*"],
            "@sv4/docs/*": ["./packages/docs/src/*"],
        },
    },
    "exclude": [
        "**/.*/",
        "**/node_modules",
        "**/tmp",
        "**/ignore",
        "**/ignore",
        "**/build",
        "**/dist",
    ],
}
