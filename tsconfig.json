{
    "compilerOptions": {
        "target": "es5",
        "module": "ESNext",
        "outDir": "./dist",
        "jsx": "react-jsx",
        "moduleResolution": "node",
        // "isolatedModules": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        // "resolveJsonModule": true,
        "downlevelIteration": true,
        "skipLibCheck": true,
        "strict": false,
        "noImplicitAny": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
        ],
        "types": [
            "node",
            "react",
        ],
        "typeRoots": [
            "./node_modules/@types",
        ],
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx",
    ],
    "exclude": [
        "./node_modules",
        "**/node_modules",
        "./ignore/**/*.ts",
        "./ignore/**/*.tsx",
    ],
}
