{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "noEmitOnError": true,
        "isolatedModules": false,
        "outDir": "dist/",
        "declaration": true,
        "declarationMap": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
        ],
        "types": [
            "node",
        ],
        "typeRoots": [
            "./node_modules/@types",
        ],
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx",
    ],
}
