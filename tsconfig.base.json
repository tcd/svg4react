{
    "compilerOptions": {
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "noFallthroughCasesInSwitch": true,
        // "resolveJsonModule": true,
        "downlevelIteration": true,
        // "skipLibCheck": true,
        "strict": false,
        "noImplicitAny": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
        ],
        "types": [
            "node",
        ],
        "baseUrl": "./",
        "paths": {
            "@src/*": ["./src/*"],
            "@types": ["./src/lib/types/index.ts"],
        },
        "typeRoots": [
            "./node_modules/@types",
            "src/@types"
        ],
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx",
    ],
    "exclude": [
        // "./node_modules",
        "./ignore/**/*.ts",
        "./ignore/**/*.tsx",
    ],
}
