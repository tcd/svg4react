{
    "compilerOptions": {
        "jsx": "react-jsx",
        "moduleResolution": "node",
        // "isolatedModules": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        // "resolveJsonModule": true,
        "downlevelIteration": true,
        "skipLibCheck": true,
        "strict": false,
        "noImplicitAny": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
        ],
        "types": [
            "node",
            "react",
        ],
        "baseUrl": "./",
        "paths": {
            "@src/*": ["./src/*"], // TODO: remove path aliases. Maybe.
        },
        "typeRoots": [
            "./node_modules/@types",
            "src/@types"
        ],
    },
}
